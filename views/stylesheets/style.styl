.ui-bar-c
	background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, #e47136), color-stop(1, #b03e04));
	background-image: -webkit-linear-gradient(top, #e47136 0%, #b03e04 100%);
	background-image: -moz-linear-gradient(top, #e47136 0%, #b03e04 100%);
	background-image: -o-linear-gradient(top, #e47136 0%, #b03e04 100%);
	background-image: -ms-linear-gradient(top, #e47136 0%, #b03e04 100%);
	background-image: linear-gradient(top, #e47136 0%, #b03e04 100%);
	border: 1px solid #b03e04;
	color: #fff;
	text-shadow: none;

.ui-input-search, div.ui-input-text 
	margin: 5px;

